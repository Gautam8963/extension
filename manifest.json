{
    "manifest_version": 3,
    "name" : "Blur Ai Ghibli Images",
    "version" : "1.0",
    "description" : "Automatically blurs AI-generated Ghibli-style images",
    "icons" : {
        "128" : "icon.png"
    },
    "permissions" : ["storage", "activeTab", "scripting"],
    "host_permissions" : ["<all_urls>"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "run_at": "document_end"
        }
      ],
    "background" : {
        "service_worker" : "background.js"
    },
    "action" : {
        "default_popup" : "pop.html"
    }
}